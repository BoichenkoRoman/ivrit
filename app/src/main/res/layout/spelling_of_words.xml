<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--показать вопрос на русском -->
    <LinearLayout
        android:id="@+id/ll_show_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_rus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text="About"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_transcription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:visibility="gone"
            android:text="text_transcription"
            android:textSize="25sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/LL_grig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_show_answer"

        android:gravity="center">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <EditText
        android:id="@+id/EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL_grig"
        android:layout_marginTop="20sp"
        android:enabled="true"
        android:hint="напишите перевод"
        android:inputType="text"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText1"
        android:text="показать ответ" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_words"
        android:layout_marginTop="24dp"
        android:text="textView1"
        android:textSize="20sp" />




    <TextView

        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_marginTop="24dp"
        android:text="textView3"
        android:textSize="20sp" />

</RelativeLayout>